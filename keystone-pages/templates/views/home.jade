extends ../../../node_modules/keystone/templates/layout/base

include ../mixins/sitemap

block intro
	.page-header
		h1 Manage

block content
	h2.page-header Data
	.keystone-lists
		if nav.flat
			each list in lists
				if (!list.get('hidden'))
					h3: a(href='/keystone/' + list.path)= list.label
		else
			each navSection in nav.sections
				.nav-section
					h4= navSection.label
					each list in navSection.lists
						if !list.isPage
							h3: a(href='/keystone/' + list.path)= list.label

	h2.page-header Sitemap
	+sitemap(sitemap)
