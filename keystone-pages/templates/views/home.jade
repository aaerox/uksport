extends ../../../node_modules/keystone/templates/layout/base

block intro
	.page-header
		h1 Manageeeee

block content
	.keystone-lists
		if nav.flat
			each list in lists
				if (!list.get('hidden'))
					h3: a(href='/keystone/' + list.path)= list.label
		else
			.nav-section
				h4 Pages
				each page in lists
					if page.isPage
						h3: a(href='/keystone/pages/' + page.path)= page.label

			each navSection in nav.sections
				.nav-section
					h4= navSection.label
					each list in navSection.lists
						if !list.isPage
							h3: a(href='/keystone/' + list.path)= list.label
			if orphanedLists.length
				.nav-section
					h4 Other
					each list in orphanedLists
						if !list.isPage
							h3: a(href='/keystone/' + list.path)= list.label
